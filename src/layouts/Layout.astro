---
import Highlighter from '../components/Highlighter';
import Nav from '../components/Nav/Nav.astro';
import ViewportWatcher from '../components/ViewportWatcher';
import { Analytics } from '@vercel/analytics/react';
import '../styles/global.scss';
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      html[data-theme='light'] {
        --nav-bg: #eee;
        --nav-shadow: #9560d38f;
        --nav-link: #444;
        background: #eee;
        color: #000;
        --card-bg: #fdfdfd;
        --card-text: #111;
      }

      html[data-theme='dark'] {
        --nav-bg: #16151c;
        --nav-shadow: #5e40b1aa;
        --nav-link: #ddd;
        background: #16151c;
        color: #ddd;
        --card-bg: #16151c;
        --card-text: #eee;
      }
      
      body {
        margin: 0;
        background: var(--nav-bg);
        color: var(--nav-link);
      }
    </style>


    <script>
      (() => {
        const theme = localStorage.getItem('theme')
          || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.dataset.theme = theme;
      })();
    </script>

    <!-- Meta Tags -->
    <meta charset="UTF-8" />
    <title>m-ox | {title || 'Dev Portfolio'}</title>
     <!-- <title>Maud Nordby â€“ Full Stack Developer | React, Node.js, PostgreSQL</title> -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Portfolio of Maud Nordby, a full stack developer specializing in React, Node.js, PostgreSQL, and building accessible, modern web applications.">
    <link rel="canonical" href="https://www.maudlinoxalis.xyz/" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono&display=swap" rel="stylesheet">
    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <!-- Open Graph -->
    <meta property="og:title" content="m-ox | Home" />
    <meta property="og:description" content="Portfolio of Maud Nordby, a full stack developer specializing in React, Node.js, PostgreSQL, and building accessible, modern web applications." />
    <meta property="og:url" content="https://www.maudlinoxalis.xyz/" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://www.maudlinoxalis.xyz/cutiepreview.webp" />
    <!-- <link rel="preload" as="image" href="/cutiepreview.webp" /> -->

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="m-ox | Portfolio" />
    <meta name="twitter:description" content="The personal portfolio of m-ox, software engineer and digital mischief-maker." />
    <meta name="twitter:image" content="https://www.maudlinoxalis.xyz/cutiepreview.webp" />

    <!-- Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Maud Nordby",
        "url": "https://www.maudlinoxalis.xyz/",
        "jobTitle": "Full Stack Developer",
        "image": "https://www.maudlinoxalis.xyz/cutiepreview.webp",
        "sameAs": [
          "https://github.com/m-ox",
          "https://www.linkedin.com/in/lena-nordby-47762511a"
        ]
      }
      </script>

  </head>
  <body style="display: flex; flex-direction: column; min-height: 100vh; margin: 0;">
    <Highlighter client:idle />
      <ViewportWatcher client:only="react" />
      <Nav currentPath={Astro.url.pathname} />

      <main style="flex: 1; align-self: anchor-center;">
        <slot />
      </main>
      <footer style="padding: 1rem; text-align: center; font-size: .9rem;">
        Created using Astro JS with &#10084;&#65039; by <a class="maudlin oxalis" href="https://github.com/m-ox" target="_blank" rel="noopener noreferrer">m-ox</a>
      </footer>

      <Analytics />
  </body>
</html>
